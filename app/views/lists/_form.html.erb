<div class="text-center">
  <% if @list.errors.present? %>
    <ul>
      <% @list.errors.each do |error, message| %>
        <li> <%= "#{error.capitalize}  #{message}" %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="form container ">
  <%= form_for @list do |list| %>
    <div class="form-group">
      <%= list.label :title , "Task" %>
      <%= list.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= list.label :date, "Due Date"%>
      <%= list.text_field :date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= list.label :description, "Description"%>
      <%= list.text_area :description, class: "form-control" %>
    </div>
    <input class="btn btn-default" type="submit" value="Submit">
  <% end %>
</div>

