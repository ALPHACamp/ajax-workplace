<h1 class="text-center">
  To Do List
  <span class="badge" id="badge">
      0
  </span>
</h1>

<div class="container">
  <div class="panel panel-info">
      <div class="panel-heading">
          <h3 class="panel-title">
              事項清單
          </h3>
      </div>

      <!-- 新增 -->
      <div class="panel-body">
          <%= form_for @list, remote: true do |f| %>
          <div class="input-group">
            <%= f.text_area :title, :class => "form-control" %>
            <div class="input-group-addon">
            <%= f.submit "+", :class => " my-btn btn-primary glyphicon glyphicon-plus" %>
            </div>
          </div>
          <% end %>
      </div>

      <!-- 待辦清單 -->
      <table class="my-table table table-hover">
        <tbody id="list">
          <tr>
              <td class="my-pointer">
                  <span class="my-font glyphicon glyphicon-unchecked" aria-hidden="true" onclick="doneToggle()"></span>
                  <span class="my-status-done-true my-font glyphicon glyphicon-check" aria-hidden="true" onclick="doneToggle()"></span>
              </td>

              <td>
                  <small>
                      2017-08-29 08:29
                  </small>
                  <p class="my-pointer my-status-edit my-font" onclick="doneToggle()">
                      待辦事項
                  </p>

                  <form class="my-status-edit-true my-status-edit my-update my-form form" action="javascript:;" onsubmit="return edit(this)">
                      <div class="input-group">
                          <input type="hidden" class="form-control" value="id">
                          <input type="text" class="form-control" value="content">
                          <div class="input-group-addon">
                              <button type="submit" class="my-btn btn-info glyphicon glyphicon-floppy-disk"></button>
                          </div>
                      </div>
                  </form>
              </td>

              <td class="my-operation">
                  <button type="button" class="my-btn my-btn-transparent text-info glyphicon glyphicon-pencil" onclick="editToggle()"></button>
                  <button type="button" class="my-btn my-btn-transparent text-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#my-alert" onclick="deleteCheck()"></button>
              </td>
          </tr>
          <% @lists.each do |list| %>
            <%= render :partial => "tr", :locals => { :list => list } %>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

    <!-- 刪除再次確認 -->
    <div class="modal fade" id="my-alert" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title text-danger text-center">
                        即將刪除【
                        <span id="delete-content"></span>
                        】
                    </h4>
                </div>
                <div class="modal-body">
                    <p class="text-center">請再次確認！請再次確認！請再次確認！</p>
                    <div class="alert alert-warning alert-dismissible fade in text-center" role="alert">
                        <strong>注意！</strong> 因為很重要所以要說三次
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" onclick="myDelete()">確認刪除</button>
                </div>
            </div>
        </div>
    </div>




    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
